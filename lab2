#include <stdio.h>
#include <math.h>
#include <stdlib.h>

int main() {
  double a,b,x,i;
  a=0;
  b=100;
  printf("Enter number of triangles\n");
  scanf("%lf",&x);
  i=0;
  while (i<x){
    a=a+b*30/2;
    b=sqrt(b*b+30*30);
    i=i+1;
  }
  printf("The area after that many triangles is %lf",a);
}
